extends base
block contenido
    h1 Registro usuarios
    form(action='/registro', method='post')
        label(for='usuario') Usuario
        input(type='text', name='usuario', placeholder='Usuario', id='usuario')
        label(for='contrasenia') Contraseña
        input(type='password', name='contrasenia', placeholder='Contraseña', id='contrasenia')
        input(type='submit', value='Enviar')